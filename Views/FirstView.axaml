<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DOT.Views.FirstView">
  <DockPanel>
    <Border DockPanel.Dock="Top"
            BorderBrush="Black"
            BorderThickness="2"
            VerticalAlignment="Top"
            CornerRadius="10"
            Margin="90,60"
            >
      <DockPanel Margin="5">
        <PathIcon Data="{StaticResource search_regular}" Margin="6,0"/>
        <TextBox Name="NoPadOrBorder"
                 FontSize="20"
                 Text="{Binding SearchText}"/>
      </DockPanel>
    </Border>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" >
      <ScrollViewer.GestureRecognizers>
        <ScrollGestureRecognizer CanHorizontallyScroll="True" CanVerticallyScroll="True"/>
      </ScrollViewer.GestureRecognizers>

      <ItemsControl ItemsSource="{Binding Buttons}" Margin="10" Background="Transparent">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <WrapPanel/>
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
      </ItemsControl>
      
    </ScrollViewer>
  </DockPanel>
</UserControl>
