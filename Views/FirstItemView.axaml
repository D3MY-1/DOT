<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DOT.Views.FirstItemView"
             xmlns:vm="using:DOT.ViewModels"
             x:DataType="vm:FirstItemViewModel">

  <Viewbox Stretch="Uniform" HorizontalAlignment="Left">
    <StackPanel Spacing="10">
      <Button
              Name="BetterButton"
              Command="{Binding Command}"
              CornerRadius="15"
              >
        <StackPanel Orientation="Horizontal">
          <Image Stretch="Fill" ClipToBounds="True" Source="{Binding Cover}"/>
          <TextBlock Margin="20" FontFamily="Calibri" FontSize="30" Text="{Binding Label}"/>
        </StackPanel>
      </Button >
    </StackPanel>
  </Viewbox>

</UserControl>
